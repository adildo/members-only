doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous" defer)  
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav.navbar.navbar-expand-lg.bg-primary
      .container-fluid
        a.navbar-brand.text-light(href='/') Members only
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.ms-auto.mb-2.mb-lg-0
            if user 
              li.nav-item
                a.nav-link.disabled.text-light(href='/sign-up') Hi, #{user.username}!
              if !user.member
                li.nav-item
                  a.nav-link.active.text-light(aria-current='page' href='/join-club') Join the Club
              else if !user.admin
                li.nav-item
                  a.nav-link.active.text-light(aria-current='page' href='/become-admin') Become an admin
              li.nav-item
                a.nav-link.text-light(href='/log-out') Log-out
            else
              li.nav-item
                a.nav-link.active.text-light(aria-current='page' href='/sign-in') Log in
              li.nav-item
                a.nav-link.text-light(href='/sign-up') Sign up
    block content        

